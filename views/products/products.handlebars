<section class="products">    
    <select name="Category" onChange="location = this.options[this.selectedIndex].value;">  
            <option value="" selected></option>
            <option value="/products">All</option>           
            <option value="/products/Adventure">Adventure</option>
            <option value="/products/Party">Party</option>
            <option value="/products/Racing">Racing</option>
            <option value="/products/Sports">Sports</option>            
    </select> <br><br>    
    {{#each products}}
        <div class="allproducts">
            <a href="/products/{{this.id}}" class="allproducts-pic">
                <img src="/uploads/{{productPic}}" alt="{{this.Name}}" width="100" height="140">
            </a>
            <div>                                
                <a href="/products/{{this.id}}">{{this.Name}}</a>
                <p id="price">CDN$ {{this.Price}}</p>                     
            </div>
                     
        </div>
    {{/each}}
</section>
