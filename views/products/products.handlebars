<section class="products">
    <div id='Category'>
        <a href="/products/Adventure">Adventure</a> <br>
        <a href="/products/Party">Party</a> <br>       
        <a href="/products/Racing">Racing</a> <br> 
        <a href="/products/Sports">Sports</a> <br>        
    </div>
    {{#each products}}
        <div class="allproducts">
            <a href="/products/{{this.id}}" class="allproducts-pic">
                <img src="/uploads/{{productPic}}" alt="{{this.Name}}" width="100" height="140">
            </a>
            <div>                                
                <a href="/products/{{this.id}}">{{this.Name}}</a>
                <p id="price">CDN$ {{this.Price}}</p>                     
            </div>
                     
        </div>
    {{/each}}
</section>